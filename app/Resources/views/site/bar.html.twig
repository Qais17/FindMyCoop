{% extends ':site:home.html.twig' %}

{% block body %}
    <section>
        <div class="col-lg-offset-1 col-lg-6 , section">
            <h3 class="text-center">Bar</h3>
            <section>
                <p></p>
                <input placeholder="Name, author,...">
                <input type="submit" value="Find">
            </section>
            {% for theme in themes %}
                {% if theme.themeParent is empty%}
                    <section class="section">
                        <h4>{{theme.title}}</h4>
                        {% if theme.themeParent%}
                            <section class="section">
                                <h4>{{theme.title}}</h4>
                                <a href='{{path('validTheme',{'id':theme.id })}}'>éditer thème</a>
                            </section>
                        {% endif %}
                        <a href='{{path('validTheme',{'id':theme.id })}}'>éditer thème</a>
                    </section>
                {% endif %}
            {% endfor %}
            <a href='{{path('theme')}}'>ajout thème</a>
        </div>
    </section>
{% endblock %}
